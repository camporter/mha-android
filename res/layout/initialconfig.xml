<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/initialconfig_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Welcome to My Home Audio!"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/initialconfig_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Ready to start? Make sure all My Home Audio hardware is turned on before you start." />

    <ListView
        android:id="@+id/initialconfig_nodeList"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:layout_weight="0.90"
        android:focusable="false" >
    </ListView>
    
    <ListView
        android:id="@+id/initialconfig_nodeSignalList"
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:layout_weight="0.90"
        android:focusable="false" >

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="0" >

        <Button
            android:id="@+id/initialconfig_nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Next" />

        <Button
            android:id="@+id/initialconfig_refreshButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/refresh" />
 
        <Button
            android:id="@+id/initialconfig_cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Cancel" />
        
        <Button
            android:id="@+id/initialconfig_startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Start" />
        
        <Button
            android:id="@+id/initialconfig_stopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Stop" />

    </LinearLayout>

</LinearLayout>



